{
  "name": "Block the youtube feed",
  "description": "Remove the feeds from youtube and just leave the search bar",
  "icons": {"128": "icon.png"},
  "version": "1.2",
  "permissions": [
      "tabs", "http://*.youtube.com/*", "https://*.youtube.com/*"
  ],
  "browser_action": {
      "default_title": "Removed the recommended videos sections",
      "default_icon": "icon.png"
  },
    "content_scripts": [{
        "run_at": "document_start",
        "css": ["style/style.css"],
        "exclude_matches": ["*://www.youtube.com/user/*", "*://www.youtube.com/channel/*"],
        "matches": ["*://www.youtube.com/", "*://www.youtube.com/watch*"]
    }],

  "manifest_version": 2
}
